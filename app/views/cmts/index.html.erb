<style>
.button_to {
  display: inline;
}

.button_to div {
  display: inline;
}
</style>

<div class="row">
<div class="col-md-2"></div>
<div class="col-md-8 text-center">

<h1>Arris CMTS List</h1>
<br />
<br />
<%= button_to 'Reports', report_path, :method => 'get', :class => 'btn btn-mini btn-primary' %>
<br />
<br />
<br />
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Host</th>
      <th>Description</th>
      <th colspan='2'>Downstream Freq</th>
    </tr>
  </thead>

  <tbody>
    <% @cmts.sort_by {|k,v| k[:host]}.each do |cmt| %>
      <tr>
        <td><%= cmt.host %></td>
        <td><%= cmt.name %></td>
        <td><%= cmt.downstream_freq %>Mhz</td>
        <!-- <td><%= button_to 'Show', [@cmt, cmt] %></td> -->
        <% if session[:admin] %>
          <td width="140px;">
            <div class='btn-group btn-group-sm'>
              <%= button_to 'Edit', edit_cmt_path(cmt), :method => 'get', :class => 'btn btn-mini btn-primary' %>
              <%= button_to 'Delete', cmt, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Add CMTS', new_cmt_path %><br />
<br />
</div>
<div class="col-md-2"></div>
</div>
